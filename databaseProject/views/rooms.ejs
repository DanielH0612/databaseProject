<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/rooms.css" rel="stylesheet">
    <link href="/stylesheets/navbar.css" rel="stylesheet">
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <h2 class="p-3">Choose a room</h2>
    <div class="list-group">
      <% rooms.forEach(function(room) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-info">Room for <%=room.Capacity%> people<span class="right">Daily cost: <%=room.PricePerDay%></span></span>

          <!-- <span class="col py-1 <%=room.Users ? 'bg-warning' : 'bi-info' %>">Room for <%=room.Capacity%> people <span class="right">Daily cost: <%=room.PricePerDay%></span></span> -->
          <button onclick="makeReservation(1, '<%=room.id%>', 'http\:\/\/localhost:8080\/rooms\/reservation')" class="col btn btn-secondary"> Rent a room</button>
          <a href="/hotels/<%=room.Hotel.id%>" class="col btn btn-secondary"> Hotel Details</a>
          <script src="./javascripts/makeReservation.js"></script>
        </div>
      <% }); %>
    </div>
  </body>
</html>